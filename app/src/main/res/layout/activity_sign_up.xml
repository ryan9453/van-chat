<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity">

    <EditText
        android:id="@+id/ed_sign_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/ed_sign_userid"
        app:layout_constraintStart_toStartOf="@+id/ed_sign_userid" />

    <EditText
        android:id="@+id/ed_sign_userid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/ed_sign_pwd"
        app:layout_constraintStart_toStartOf="@+id/ed_sign_pwd" />

    <EditText
        android:id="@+id/ed_sign_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="48dp"
        android:ems="10"
        android:inputType="numberPassword"
        app:layout_constraintBottom_toTopOf="@+id/ed_sign_pwd_again"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/bt_sign_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="76dp"
        android:text="Send"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_sign_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nickname"
        app:layout_constraintBottom_toTopOf="@+id/ed_sign_name"
        app:layout_constraintStart_toStartOf="@+id/ed_sign_name" />

    <TextView
        android:id="@+id/tv_sign_userid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="User id"
        app:layout_constraintBottom_toTopOf="@+id/ed_sign_userid"
        app:layout_constraintStart_toStartOf="@+id/ed_sign_userid" />

    <TextView
        android:id="@+id/tv_sign_pwd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        app:layout_constraintBottom_toTopOf="@+id/ed_sign_pwd"
        app:layout_constraintStart_toStartOf="@+id/ed_sign_pwd" />

    <EditText
        android:id="@+id/ed_sign_pwd_again"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="164dp"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tv_sign_pwd_again"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please enter password again"
        app:layout_constraintBottom_toTopOf="@+id/ed_sign_pwd_again"
        app:layout_constraintStart_toStartOf="@+id/ed_sign_pwd_again" />
</androidx.constraintlayout.widget.ConstraintLayout>